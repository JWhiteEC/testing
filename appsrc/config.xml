<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>helloworld</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="https://www.ec-gaming.net/beta/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-navigation href="*" />
    <preference name="DisallowOverscroll"         	value="true" />
    <preference name="deployment-target" 		value="10.2" />
    <preference name="HideKeyboardFormAccessoryBar"	value="true" />
    <preference name="KeyboardShrinksView" 		value="true" />
    <plugin name="cordova-plugin-iosrtc" spec="../plugin-iosrtc" />
    <plugin name="cordova-plugin-wkwebview-engine" />
    <plugin name="cordova-plugin-keyboard" />
    <plugin name="cordova-powermanagement" spec="../plugin-powermanagement" />
    <plugin name="cordova-proximity" spec="../plugin-proximity" />
    <plugin name="cordova-plugin-audioroute" />
    <plugin name="cordova-plugin-customurlscheme">
         <variable name="URL_SCHEME" value="firebase-game-loop" />
    </plugin>
    <plugin name="cordova-plugin-statusbar" />
    <plugin name="plugin-iosbg" spec="../plugin-iosbg" />
    <splash src="www/res/Default@2x~universal~anyany.png" />
    <access origin="*" />
    <allow-intent href="helloworld://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
